# SECURITY:
SECRET_KEY=your_production_secret_key_here

# DATABASE (Supabase/PostgreSQL)
# Format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://user:password@aws-0-region.pooler.supabase.com:5432/postgres

# STORAGE (Cloudflare R2 / S3)
# Set to "s3" to enable Cloudflare R2. Set to "local" for local disk storage.
STORAGE_MODE=local

# Cloudflare R2 Credentials (Required if STORAGE_MODE=s3)
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=your_bucket_name
R2_ENDPOINT_URL=https://<accountid>.r2.cloudflarestorage.com

# OPTIONAL
# CORS_ORIGINS=https://your-frontend-domain.com,http://localhost:5173
